<resources>

    <style name="NoPlanetTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoPlanetThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTheme" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">@font/bromello</item>
    </style>

    <style name="SubtitleTheme" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="WhiteButton" parent="@android:style/Widget.Button">
        <item name="android:backgroundTint">#FFF</item>

    </style>

</resources>
