<resources>

    <!-- Base application theme. -->
    <style name="NoPlanetTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTheme" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">@font/bromello</item>
    </style>

    <style name="SubtitleTheme" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
