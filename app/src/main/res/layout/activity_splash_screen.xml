<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@drawable/planetearth"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".BSplash">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_splash_icon"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/app_icon"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_splash_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/no_planet_b"
            android:theme="@style/TitleTheme" />

        <TextView
            android:id="@+id/txt_splash_subtitle"
            android:theme="@style/SubtitleTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/too_late"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>